sample: CONTEXT =
BEGIN

  N: NATURAL = 12;  % number of processes
  M: NATURAL = 4;  % number of relays

  OM: MODULE =
  BEGIN
    OUTPUT
      round:NATURAL
	INITIALIZATION
      round = 0;

    TRANSITION
     [ round = 0 -->
         round' = 1;
    []
       round = 1 -->
         round' = 2;
    []
       round = 2 -->
         round' = 3;
    []
       round = 3 --> round'= N; %% don
	[] 
		ELSE --> round' = round;
     ]
  END;

  agreement: LEMMA
    OM |- G(round >= 4 => round = N);
 
END
