composition_sync_01: CONTEXT = 
BEGIN

  m1: MODULE = 
  BEGIN
  
    INPUT
      x_in: INTEGER
    OUTPUT 
      x_out: INTEGER
  	LOCAL 
	    x_local: INTEGER
  	GLOBAL
	    x_global: INTEGER
  
    INITIALIZATION      
  	  x_out = 0;
	    x_local = 0;
	    x_global = 0;
  
    TRANSITION
      x_out' = x_out + 1;

  END;

  m2: MODULE = 
  BEGIN
  
    INPUT
      x_in: INTEGER
    OUTPUT 
      x_out: INTEGER
  	LOCAL 
	    x_local: INTEGER
  
    INITIALIZATION      
  	  x_out = 0;
	    x_local = 0;
  
    TRANSITION
      x_out' = x_out + 1;

  END;
 
  m: MODULE = m1 || m2;
 
END

