composition_sync_03: CONTEXT = 
BEGIN

  m1[N: INTEGER]: MODULE = 
  BEGIN
  
    INPUT
      x_in: INTEGER
    OUTPUT 
      x_out: INTEGER
  	LOCAL 
	    x_local: INTEGER
  	GLOBAL
	    x_global: INTEGER
  
    INITIALIZATION      
  	  x_out = 0;
	    x_local = 0;
	    x_global = 0;
  
    TRANSITION
      x_out' = x_out + N;
      x_local' = x_local + N;

  END;

  m2[N: INTEGER]: MODULE = 
  BEGIN
  
    INPUT
      x_in: INTEGER
    OUTPUT 
      y_out: INTEGER
  	LOCAL 
	    x_local: INTEGER
  
    INITIALIZATION      
  	  y_out = 0;
	    x_local = 0;
  
    TRANSITION
      y_out' = y_out + N;
      x_local' = x_local + N;

  END;
 
  m: MODULE = m1 || m2;
 
  prove_this: 
  THEOREM m |- x_out = y_out;
 
 
END

